user_configure_kernel() {
  kconfigs_y EXT2_FS
  kconfigs_n EXT4_FS NFS_FS ISO9660_FS MSDOS_FS VFAT_FS
  kconfigs_n RFKILL CFG80211 MAC80211 WIRELESS WLAN
  kconfigs_n NET_VENDOR_3COM NET_VENDOR_ADAPTEC NET_VENDOR_AGERE \
        NET_VENDOR_ALTEON NET_VENDOR_AMAZON NET_VENDOR_AMD \
	NET_VENDOR_ARC NET_VENDOR_ATHEROS NET_CADENCE \
	NET_VENDOR_BROADCOM NET_VENDOR_BROCADE NET_VENDOR_CAVIUM \
	NET_VENDOR_CHELSIO NET_VENDOR_CISCO NET_VENDOR_DEC \
	NET_VENDOR_DLINK NET_VENDOR_EMULEX NET_VENDOR_EZCHIP \
	NET_VENDOR_EXAR NET_VENDOR_HP NET_VENDOR_INTEL NET_VENDOR_MARVELL \
	NET_VENDOR_MELLANOX NET_VENDOR_MICRELNET_VENDOR_MYRI \
	NET_VENDOR_NATSEMI NET_VENDOR_NETRONOME NET_VENDOR_8390 \
	NET_VENDOR_NVIDIA NET_VENDOR_OKI NET_VENDOR_QLOGIC \
	NET_VENDOR_REALTEK NET_VENDOR_QUALCOMM NET_VENDOR_RENESAS \
	NET_VENDOR_RDC NET_VENDOR_ROCKER NET_VENDOR_SAMSUNG \
	NET_VENDOR_SEEQ NET_VENDOR_SILAN NET_VENDOR_SIS NET_VENDOR_SMSC \
	NET_VENDOR_STMICRO NET_VENDOR_SUN NET_VENDOR_SYNOPSYS \
	NET_VENDOR_TEHUTI NET_VENDOR_TI NET_VENDOR_VIA NET_VENDOR_WIZNET
  kconfigs_n ATA SCSI MD MACINTOSH_DRIVERS SOUND FDDI USB_NET_DRIVERS \
	I2C PTP_1588_CLOCK
  kconfigs_n USB_SUPPORT EDAC X86_MCE MICROCODE X86_MSR X86_CPUID \
	X86_CHECK_BIOS_CORRUPTION X86_INTEL_MEMORY_PROTECTION_KEYS \
	X86_EXTENDED_PLATFORM NUMA EFI X86_REROUTE_FOR_BROKEN_BOOT_IRQS
  kconfigs_n AGP DRM LOGO BACKLIGHT_LCD_SUPPORT FB
  kconfigs_n PARTITION_ADVANCED CALGARY_IOMMU HYPERVISOR_GUEST
  kconfigs_n CRASH_DUMP KEXEC RELOCATABLE
  kconfigs_n SUSPEND HIBERNATION PM
  kconfigs_n PCCARD HAMRADIO DEBUG_DEVRES PNP IOMMU_SUPPORT NEW_LEDS
  kconfigs_n DEBUG_KERNEL PROVIDE_OHCI1394_DMA_INIT X86_VERBOSE_BOOTUP \
	     EARLY_PRINTK_DBGP MAGIC_SYSRQ X86_DEBUG_FPU
  kconfigs_n TRACING KPROBE_EVENT BLK_DEV_IO_TRACE DEBUG_FS
  kconfigs_n SECURITY
  # blacklist
  kconfigs_n PHY_SUN4I_USB
}

user_configure_busybox() {
  kconfigs_n MAKEMIME POPMAILDIR REFORMIME SENDMAIL LPD LPR LPQ \
	HTTPD DNSD FTPD FAKEIDENTD INETD TELNETD TFTPD UDHCPD \
	TCPSVD UDPSVD ZCIP \
	I2CGET I2CSET I2CDUMP I2CDETECT NANDWRITE NANDDUMP \
	UBIATTACH UBIDETACH UBIMKVOL UBIRMVOL UBIRSVOL UBIUPDATEVOL UBIRENAME \
	CHAT EJECT DC DEVMEM FBSPLASH HDPARM MT RAIDAUTORUN RX VOLNAME \
	BLKDISCARD BLOCKDEV FATATTR FBSET FDFLUSH FDFORMAT FDISK \
	FSCK_MINIX MKFS_MINIX MKFS_VFAT MKSWAP RDATE READPROFILE RTCWAKE \
	SWAPONOFF MODINFO MODPROBE_SMALL BOOTCHARTD ED PATCH VI
}
